"$BROWSER"
   Mod4+w

"$FILEMANAGER"
   Mod4+e

"check=$(echo -e "yes\nno" | rofi -dmenu -p "shutdown your computer?" -theme ~/.themes/rofi/launcher.rasi); [ $check == "yes" ] && shutdown now"
   Mod4+x

"kitty bashtop"
    Mod4+n

"rofi -show run -theme ~/.themes/rofi/launcher.rasi"
    Mod4+p

"rofi -show window -theme ~/.themes/rofi/launcher.rasi"
    Mod4+Shift+p

"[[ $(top -b -n1 | grep jgmenu) ]] && pkill jgmenu; jgmenu || jgmenu"
   Mod4+g

"amixer -D pulse sset Master 10%+ ; pkill -RTMIN+2 dwmblocks"
    Mod4+Up

"amixer -D pulse sset Master 10%- ; pkill -RTMIN+2 dwmblocks"
    Mod4+Down

"cd ~/Screenshots && scrot && sleep 0.5 ; notify-send 'Screenshot saved' 'full screen'"
   Alt+Shift+s

"cd ~/Screenshots && scrot -s && sleep 0.5 ; notify-send 'Screenshot saved' 'part of the screen'"
   Alt+Shift+p

"setxkbmap us && sleep 0.1 ; notify-send 'keyboard layout' 'english' ; pkill -RTMIN+1 dwmblocks"
   Alt+Shift+1

"setxkbmap ara && sleep 0.1 ; notify-send 'keyboard layout' 'arabic' ; pkill -RTMIN+1 dwmblocks"
   Alt+Shift+2

