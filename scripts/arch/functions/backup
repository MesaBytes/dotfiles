# !/usr/bin/bash

function backup {
  # write all pacman and aur packages 
  pacman -Qqen > pacman_pkglist
  yay -Qqem > yay_pkglist
  
  cd ../../
  
  #
  # .config 
  #
  
  rsync -Pr ~/.config/alacritty dotfiles/.config/
  rsync -Pr ~/.config/bspwm dotfiles/.config/
  rsync -Pr ~/.config/btops dotfiles/.config/
  rsync -Pr ~/.config/compton dotfiles/.config/
  rsync -Pr ~/.config/deadd dotfiles/.config/
  rsync -Pr ~/.config/dxhd dotfiles/.config/
  rsync -Pr ~/.config/jgmenu dotfiles/.config/
  rsync -Pr ~/.config/kitty dotfiles/.config/
  rsync -Pr ~/.config/mpv dotfiles/.config/
  rsync -Pr ~/.config/nvim dotfiles/.config/
  rsync -Pr ~/.config/openbox dotfiles/.config/
  rsync -Pr ~/.config/polybar dotfiles/.config/
  rsync -Pr ~/.config/sxhkd dotfiles/.config/
  rsync -Pr ~/.config/picom.conf dotfiles/.config/

  #
  # home 
  #

  rsync -Pr ~/.icons dotfiles/home/
  rsync -Pr ~/.shell_profile dotfiles/home/
  rsync -Pr ~/.themes dotfiles/home/
  rsync -Pr ~/scripts dotfiles/home/

  rsync -Pr ~/.bashrc dotfiles/home/
  rsync -Pr ~/.imwheelrc dotfiles/home/
  rsync -Pr ~/.xbindkeysrc dotfiles/home/
  rsync -Pr ~/.xinitrc dotfiles/home/
  rsync -Pr ~/.Xresources dotfiles/home/
  rsync -Pr ~/.yarnrc dotfiles/home/
  rsync -Pr ~/.zprofile dotfiles/home/
  rsync -Pr ~/.zshenv dotfiles/home/
  rsync -Pr ~/.zshrc dotfiles/home/

}