# !/usr/bin/bash

function backup {
  # write all pacman and aur packages 
  pacman -Qqen > pacman_pkglist
  yay -Qqem > yay_pkglist
  
  cd ../../
  
  #
  # .config 
  #
  
  cp -av ~/.config/alacritty dotfiles/.config/
  cp -av ~/.config/bspwm dotfiles/.config/
  cp -av ~/.config/btops dotfiles/.config/
  cp -av ~/.config/compton dotfiles/.config/
  cp -av ~/.config/deadd dotfiles/.config/
  cp -av ~/.config/dxhd dotfiles/.config/
  cp -av ~/.config/jgmenu dotfiles/.config/
  cp -av ~/.config/kitty dotfiles/.config/
  cp -av ~/.config/mpv dotfiles/.config/
  cp -av ~/.config/nvim dotfiles/.config/
  cp -av ~/.config/openbox dotfiles/.config/
  cp -av ~/.config/polybar dotfiles/.config/
  cp -av ~/.config/sxhkd dotfiles/.config/
  cp -av ~/.config/picom.conf dotfiles/.config/

  #
  # home 
  #

  cp -av ~/.icons dotfiles/home/
  cp -av ~/.shell_profile dotfiles/home/
  cp -av ~/.themes dotfiles/home/
  cp -av ~/scripts dotfiles/home/

  cp -av ~/.bashrc dotfiles/home/
  cp -av ~/.imwheelrc dotfiles/home/
  cp -av ~/.xbindkeysrc dotfiles/home/
  cp -av ~/.xinitrc dotfiles/home/
  cp -av ~/.Xresources dotfiles/home/
  cp -av ~/.yarnrc dotfiles/home/
  cp -av ~/.zprofile dotfiles/home/
  cp -av ~/.zshenv dotfiles/home/
  cp -av ~/.zshrc dotfiles/home/

}